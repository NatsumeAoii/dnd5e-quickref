{
  "extends": "airbnb-base",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "error",
      "always"
    ],
    "no-console": "warn",
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-plusplus": "off",
    "no-continue": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off",
    "max-classes-per-file": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "no-use-before-define": "off",
    "no-shadow": "off",
    "consistent-return": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "import/prefer-default-export": "off"
  },
  "overrides": [
    {
      "files": [
        "sw.js"
      ],
      "env": {
        "serviceworker": true
      },
      "rules": {
        "no-restricted-globals": "off"
      }
    },
    {
      "files": [
        "scripts/build.js"
      ],
      "env": {
        "node": true,
        "es2021": true
      },
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ],
        "no-restricted-syntax": "off"
      }
    }
  ]
}