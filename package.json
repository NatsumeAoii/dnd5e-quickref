{
  "name": "dnd5e-quickref",
  "version": "1.0.0",
  "description": "A static, vanilla JS/CSS project.",
  "main": "js/quickref.js",
  "type": "module",
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint . --ext js --config config/.eslintrc.json --ignore-path config/.eslintignore",
    "lint:css": "stylelint \"**/*.css\" --config config/.stylelintrc.json --ignore-path config/.stylelintignore",
    "lint:fix": "npm-run-all --parallel lint:fix:*",
    "lint:fix:js": "eslint . --ext js --fix --config config/.eslintrc.json --ignore-path config/.eslintignore",
    "lint:fix:css": "stylelint \"**/*.css\" --fix --config config/.stylelintrc.json --ignore-path config/.stylelintignore",
    "build": "node scripts/build.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.24.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "html-minifier-terser": "^7.2.0",
    "lightningcss-cli": "^1.28.1",
    "npm-run-all": "^4.1.5",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1"
  }
}